<Window x:Class="Rectrans.Views.RectangleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Rectrans.Views.Controls"
        xmlns:viewModels="clr-namespace:Rectrans.ViewModels"
        mc:Ignorable="d"
        Height="200" Width="500"
        Opacity="{Binding Opacity}"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowStyle.Rect}"
        WindowChrome.WindowChrome="{DynamicResource WindowChrome}"
        Title="翻译区域">

    <Window.DataContext>
        <viewModels:RectangleViewModel />
    </Window.DataContext>

    <Window.Resources>
        <WindowChrome x:Key="WindowChrome">
            <WindowChrome.ResizeBorderThickness>
                <Thickness>10</Thickness>
            </WindowChrome.ResizeBorderThickness>
        </WindowChrome>
    </Window.Resources>

    <Grid>
        <Border Height="30" VerticalAlignment="Top" Background="Aqua">
            <StackPanel Orientation="Horizontal">
                <Button Height="20" Content="开始翻译"></Button>
                <Button Height="20" Content="开始翻译"></Button>
            </StackPanel>
        </Border>
        <controls:MessageBorder VerticalAlignment="Bottom" />
    </Grid>
</Window>