<Window x:Class="Rectrans.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rectrans"
        mc:Ignorable="d"
        Title="Rectrans" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Canvas>
        <Button Content="设置翻译区域"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0" Width="80" Height="25"
                Click="Rect_Button_Click"/>
        <Button Content="窗口置顶"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="100,10,0,0" Width="80" Height="25"
                Click="Topmost_Button_Click"/>
        <Button Content="点击翻译"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="190,10,0,0" Width="80" Height="25"
                x:Name="Trans_Button" Click="Trans_Button_Click"/>
        <ComboBox HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  VerticalContentAlignment="Center"
                  Margin="280,10,0,0" Width="80" Height="25"
                  RenderTransformOrigin="0.425,-0.906"
                  x:Name="AutoTranslateTime">
            <ComboBoxItem IsSelected="True">自动翻译</ComboBoxItem>
        </ComboBox>

        <ComboBox HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  VerticalContentAlignment="Center"
                  Margin="10,45,0,0"
                  Width="100"
                  Height="25"
                  RenderTransformOrigin="0.425,-0.906"
                  x:Name="FromLanguageComboBox">
            <ComboBoxItem IsSelected="True">英语</ComboBoxItem>
        </ComboBox>

        <Label HorizontalAlignment="Left"
               VerticalAlignment="Top"
               HorizontalContentAlignment="Center"
               Content="To"
               FontSize="15"
               FontFamily="Cascadia Code"
               Margin="120,45,0,0" Width="30" Height="25"/>

        <ComboBox HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  VerticalContentAlignment="Center"
                  Margin="160,45,0,0"
                  Width="100"
                  Height="25"
                  RenderTransformOrigin="0.425,-0.906"
                  x:Name="ToLanguageComboBox">
            <ComboBoxItem IsSelected="True">简体中文</ComboBoxItem>
        </ComboBox>

        <Label Content="原文："
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="50,80,0,0" Width="80" Height="25"/>
        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="50,110,0,0"
                   TextWrapping="Wrap"
                   Text="Waiting..."
                   FontSize="16"
                   Height="140" Width="700"
                   x:Name="OriginalTextBlock"/>

        <Label Content="翻译："
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="50,250,0,0" Width="80" Height="25"/>
        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="50,280,0,0"
                   TextWrapping="Wrap" Text="等待载入..."
                   FontSize="16"
                   Height="140" Width="700"
                   x:Name="TranslatedTextBlock"/>

    </Canvas>
</Window>
