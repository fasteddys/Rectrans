<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFrameworks>net6.0-windows;net48</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>10.0</LangVersion>
        <Nullable>enable</Nullable>
        <UseWPF>true</UseWPF>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Rectrans.Interpreter\Rectrans.Interpreter.csproj" />
        <ProjectReference Include="..\Rectrans.Mvvm\Rectrans.Mvvm.csproj" />
        <ProjectReference Include="..\Rectrans.OCR\Rectrans.OCR.csproj" />
        <ProjectReference Include="..\Rectrans.Themes\Rectrans.Themes.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Resource Include="Fonts\FiraCode-Regular.ttf" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="MahApps.Metro.IconPacks" Version="4.11.0" />
        <PackageReference Include="Microsoft.Toolkit.Mvvm" Version="7.1.2" />
        <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.39" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="Assets\**">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <None Update="appsettings.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="Properties\Annotations.cs" />
    </ItemGroup>

</Project>
