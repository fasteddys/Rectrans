<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color -->
    <SolidColorBrush x:Key="InputWindowBackgroundColor" Color="AliceBlue" Opacity=".2" />


    <!-- Start: NoneWindowStyle -->
    <Style x:Key="NoneWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="AllowsTransparency" Value="True" />
    </Style>
    <!-- End: NoneWindowStyle -->

    <!-- Start: InputWindowStyle -->
    <Style x:Key="InputWindowStyle" TargetType="{x:Type Window}" BasedOn="{StaticResource NoneWindowStyle}">
        <Setter Property="Topmost" Value="True" />
        <Setter Property="ResizeMode" Value="CanResize" />
        <Setter Property="Background" Value="{DynamicResource InputWindowBackgroundColor}" />
    </Style>
    <!-- End: NoneAndTopMostWindowStyle -->

</ResourceDictionary>